{
    // -------------------------------------------------------------------------
    // General
    // -------------------------------------------------------------------------
    "window.commandCenter": false,
    // "window.density.editorTabHeight": "compact",
    "update.showReleaseNotes": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.untrustedFiles": "open",
    // "workbench.editor.tabSizing": "shrink",
    // "workbench.editor.tabSizing": "fixed",
    // "workbench.editor.tabSizingFixedMaxWidth": 120,
    // "workbench.editor.wrapTabs": true,
    // "workbench.editor.scrollToSwitchTabs": true,
    // "extensions.ignoreRecommendations": true,
    // -------------------------------------------------------------------------
    // Explorer
    // -------------------------------------------------------------------------
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrderLexicographicOptions": "upper",
    // "explorer.autoReveal": false,
    // -------------------------------------------------------------------------
    // Files
    // -------------------------------------------------------------------------
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.ccls-cache": true,
    },
    "search.exclude": {
        "**/.ccls-cache": true,
    },
    "files.watcherExclude": {
        "**/.ccls-cache": true,
    },
    // -------------------------------------------------------------------------
    // Editor
    // Ctrl+Shift+^ (german layout) or Ctrl+Shift+\ (english layout)
    // -------------------------------------------------------------------------
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "editor.detectIndentation": true,
    "editor.wordBasedSuggestionsMode": "currentDocument",
    "editor.stickyScroll.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    // "editor.hover.enabled": false,
    "editor.codeLens": false,
    "editor.rulers": [
        80,
        120,
    ],
    // "editor.quickSuggestions": false,
    // "editor.quickSuggestions": {
    //     "comments": "off",
    //     "strings": "off",
    //     "other": "off"
    // },
    // "editor.wordBasedSuggestions": false,
    // "editor.selectionHighlight": false,
    // "editor.occurrencesHighlight": false,
    // "editor.parameterHints.enabled": false,
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.suggest.snippetsPreventQuickSuggestions": false,
    // -------------------------------------------------------------------------
    // Diff editor
    // -------------------------------------------------------------------------
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.hideUnchangedRegions.enabled": true,
    // -------------------------------------------------------------------------
    // Log
    // -------------------------------------------------------------------------
    "[log]": {
        "editor.wordWrap": "on",
    },
    // -------------------------------------------------------------------------
    // Debug
    // -------------------------------------------------------------------------
    "debug.onTaskErrors": "abort",
    // -------------------------------------------------------------------------
    // Problems
    // -------------------------------------------------------------------------
    "problems.showCurrentInStatus": true,
    // -------------------------------------------------------------------------
    // Rewrap [stkb.rewrap]
    // Alt+Q
    // -------------------------------------------------------------------------
    "rewrap.wrappingColumn": 72,
    // -------------------------------------------------------------------------
    // Remote [ms-vscode-remote.remote-ssh]
    // -------------------------------------------------------------------------
    "remote.SSH.remotePlatform": {
        "10.204.62.226": "linux",
    },
    "remote.SSH.path": "C:\\WINDOWS\\System32\\OpenSSH\\ssh.exe",
    "remote.SSH.useLocalServer": true,
    "remote.SSH.lockfilesInTmp": true,
    "http.proxyStrictSSL": false,
    // "http.proxy":"http://127.0.0.1:3128",
    // -------------------------------------------------------------------------
    // Git [eamodio.gitlens, mhutchie.git-graph]
    // -------------------------------------------------------------------------
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    // "gitlens.hovers.currentLine.over": "line",
    // "gitlens.menus": {
    //     "editorGroup": {
    //         "blame": false,
    //         "compare": false
    //     },
    // },
    // -------------------------------------------------------------------------
    // Json [jkillian.custom-local-formatters]
    // Ctrl+Shift+I (german language) or Alt+Shift+F (english language)
    // -------------------------------------------------------------------------
    "customLocalFormatters.formatters": [
        {
            "command": "/home/roloff/.local/bin/hdump",
            "languages": [
                "json"
            ]
        }
    ],
    "[json]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "jkillian.custom-local-formatters",
        "rewrap.wrappingColumn": 80,
    },
    // -------------------------------------------------------------------------
    // Protobuf [zxh404.vscode-proto3]
    // -------------------------------------------------------------------------
    "[proto3]": {
        // "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "zxh404.vscode-proto3",
        "rewrap.wrappingColumn": 80,
    },
    // -------------------------------------------------------------------------
    // Python [ms-python.python, ms-python.vscode-pylance,
    // ms-python.pylint, ms-python.black-formatter, eeyore.yapf,
    // ms-python.isort, donjayamanne.python-environment-manager]
    // -------------------------------------------------------------------------
    "python.defaultInterpreterPath": "/usr/bin/python",
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    // "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    // "python.linting.enabled": true,
    // "python.linting.lintOnSave": true,
    // "python.linting.pylintPath": "pylint",
    // "python.linting.pylintEnabled": true,
    "yapf.args": [
        "--style",
        "{based_on_style: google, column_limit: 80, indent_width: 4}",
    ],
    "black-formatter.args": [
        "--preview",
        "--line-length",
        "80",
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        // "editor.defaultFormatter": "eeyore.yapf",
        "editor.defaultFormatter": "ms-python.black-formatter",
        // "editor.defaultFormatter": "ms-python.python",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "rewrap.wrappingColumn": 80,
    },
    // -------------------------------------------------------------------------
    // Shell []
    // -------------------------------------------------------------------------
    "[shellscript]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "rewrap.wrappingColumn": 80,
    },
    // -------------------------------------------------------------------------
    // Go [golang.go, bongnv.go-custom-format]
    // -------------------------------------------------------------------------
    "go.goroot": "/home/roloff/sdk/go1.20.12",
    "go.toolsManagement.autoUpdate": true,
    "gopls": {
        "importShortcut": "Definition",
        "ui.semanticTokens": true,
    },
    "goCustomFormat.onSave": false,
    "goCustomFormat.fmtCmds": [
        "golines",
        "-m",
        "80"
    ],
    "[go]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "rewrap.wrappingColumn": 80,
    },
    // -------------------------------------------------------------------------
    // Dart []
    // -------------------------------------------------------------------------
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "rewrap.wrappingColumn": 80,
    },
    "dart.closingLabels": false,
    // "dart.previewFlutterUiGuides": true,
    // -------------------------------------------------------------------------
    // C++ [ms-vscode.cpptools, xaver.clang-format,
    // cschlosser.doxdocgen, ccls-project.ccls,
    // llvm-vs-code-extensions.vscode-clangd, CS128.cs128-clang-tidy]
    // -------------------------------------------------------------------------
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.formatting": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.intelliSenseEngine": "disabled",
    // "C_Cpp.experimentalFeatures": "enabled",
    // "C_Cpp.intelliSenseCacheSize": 0,
    // "clangd.arguments": [
    //     "--background-index",
    //     "--header-insertion=iwyu",
    //     "-j=20",
    // ],
    // "clangd.fallbackFlags": [
    //     "-std=c++2a",
    //     "-I${workspaceFolder}/OSS",
    //     "-I/tmp/just_external_headers/include",
    // ],
    "ccls.codeLens.enabled": false,
    "ccls.cache.hierarchicalPath": true,
    // "clang-tidy.executable": "/usr/bin/clang-tidy",
    // "clang-tidy.lintOnSave": true,
    // "clang-tidy.compilerArgs": [
    //     "-std=c++20",
    //     "-stdlib=libc++",
    //     "-IOSS",
    //     "-I/home/roloff/.devcloud-external/include-dev",
    // ],
    // "clang-tidy.checks": [
    //     "modernize-*",
    // ],
    // "clang-tidy.compilerArgsBefore": [
    //     "-x=c++",
    // ],
    // "clang-format.executable": "/usr/bin/clang-format",
    // "clang-format.style": "{BasedOnStyle: Google, IndentWidth: 4}",
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.detectIndentation": false,
        "editor.tabSize": 4,
        // "editor.wordBasedSuggestions": false,
        // "editor.suggest.insertMode": "replace",
        // "editor.semanticHighlighting.enabled": true,
        "rewrap.wrappingColumn": 80,
    },
    "window.zoomLevel": 1,
    "editor.accessibilitySupport": "off",
    "window.confirmSaveUntitledWorkspace": false,
    // -------------------------------------------------------------------------
    // Cmake
    // -------------------------------------------------------------------------
    // "cmake.configureOnOpen": false
}
