{
    // -------------------------------------------------------------------------
    // General
    // -------------------------------------------------------------------------
    "window.zoomLevel": 1,
    "window.commandCenter": false,
    // "window.density.editorTabHeight": "compact",
    "workbench.editor.tabSizing": "shrink",
    // "workbench.editor.tabSizing": "fixed",
    // "workbench.editor.tabSizingFixedMaxWidth": 120,
    // "workbench.editor.wrapTabs": true,
    // "workbench.editor.scrollToSwitchTabs": true,
    "update.showReleaseNotes": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.untrustedFiles": "open",
    // "extensions.ignoreRecommendations": true,
    // -------------------------------------------------------------------------
    // Explorer
    // -------------------------------------------------------------------------
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrderLexicographicOptions": "upper",
    // "explorer.autoReveal": false,
    // -------------------------------------------------------------------------
    // Files
    // -------------------------------------------------------------------------
    "files.insertFinalNewline": true,
    // "files.autoSave": "afterDelay",
    // "files.autoSaveDelay": 1000,
    // "files.associations": {
    //     "TARGETS": "json",
    //     "RULES": "json",
    //     "EXPRESSIONS": "json"
    // },
    // "files.watcherExclude": {
    //     "**/.vscode/**": true
    // },
    // -------------------------------------------------------------------------
    // Editor
    // Ctrl+Shift+^ or Ctrl+Shift+\
    // -------------------------------------------------------------------------
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "editor.detectIndentation": true,
    "editor.rulers": [
        80,
        120
    ],
    // "editor.quickSuggestions": false,
    // "editor.quickSuggestions": {
    //     "comments": "off",
    //     "strings": "off",
    //     "other": "off"
    // },
    // "editor.selectionHighlight": false,
    // "editor.occurrencesHighlight": false,
    // "editor.parameterHints.enabled": false,
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.suggest.snippetsPreventQuickSuggestions": false,
    // -------------------------------------------------------------------------
    // Diff editor
    // -------------------------------------------------------------------------
    "diffEditor.ignoreTrimWhitespace": false,
    // -------------------------------------------------------------------------
    // Log
    // -------------------------------------------------------------------------
    "[log]": {
        "editor.wordWrap": "on"
    },
    // -------------------------------------------------------------------------
    // Debug
    // -------------------------------------------------------------------------
    "debug.onTaskErrors": "abort",
    // -------------------------------------------------------------------------
    // Problems
    // -------------------------------------------------------------------------
    "problems.showCurrentInStatus": true,
    // -------------------------------------------------------------------------
    // Rewrap [stkb.rewrap]
    // Alt+Q
    // -------------------------------------------------------------------------
    "rewrap.wrappingColumn": 72,
    // -------------------------------------------------------------------------
    // Remote [ms-vscode-remote.remote-ssh]
    // -------------------------------------------------------------------------
    "remote.SSH.remotePlatform": {
        "10.204.62.226": "linux"
    },
    "remote.SSH.path": "C:\\WINDOWS\\System32\\OpenSSH\\ssh.exe",
    "remote.SSH.useLocalServer": true,
    "remote.SSH.lockfilesInTmp": true,
    // -------------------------------------------------------------------------
    // Git [eamodio.gitlens, mhutchie.git-graph]
    // -------------------------------------------------------------------------
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    // "gitlens.hovers.currentLine.over": "line",
    // "gitlens.menus": {
    //     "editorGroup": {
    //         "blame": false,
    //         "compare": false
    //     },
    // },
    // -------------------------------------------------------------------------
    // Json [jkillian.custom-local-formatters]
    // Ctrl+Shift+I or Alt+Shift+F
    // -------------------------------------------------------------------------
    "customLocalFormatters.formatters": [
        {
            "command": "/home/roloff/.local/bin/hdump",
            "languages": [
                "json"
            ]
        }
    ],
    "[json]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "jkillian.custom-local-formatters"
    },
    // -------------------------------------------------------------------------
    // Protobuf [zxh404.vscode-proto3]
    // -------------------------------------------------------------------------
    "[proto3]": {
        // "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "zxh404.vscode-proto3"
    },
    // -------------------------------------------------------------------------
    // Python [ms-python.python, ms-python.vscode-pylance,
    // ms-python.pylint, ms-python.black-formatter, eeyore.yapf,
    // ms-python.isort, donjayamanne.python-environment-manager]
    // -------------------------------------------------------------------------
    "python.defaultInterpreterPath": "/usr/bin/python",
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    // "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    // "python.linting.enabled": true,
    // "python.linting.lintOnSave": true,
    // "python.linting.pylintPath": "pylint",
    // "python.linting.pylintEnabled": true,
    "yapf.args": [
        "--style",
        "{based_on_style: google, column_limit: 80, indent_width: 4}"
    ],
    "black-formatter.args": [
        "--line-length",
        "80"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        // "editor.defaultFormatter": "eeyore.yapf",
        "editor.defaultFormatter": "ms-python.black-formatter",
        // "editor.defaultFormatter": "ms-python.python",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    // -------------------------------------------------------------------------
    // C++
    // -------------------------------------------------------------------------
    // "clang-tidy.executable": "/usr/bin/clang-tidy",
    // "clang-tidy.lintOnSave": true,
    // "clang-tidy.compilerArgs": [
    //     "-std=c++20",
    //     "-stdlib=libc++",
    //     "-IOSS",
    //     "-I/home/roloff/.devcloud-external/include",
    // ],
    // "clang-tidy.checks": [
    //     "modernize-*"
    // ],
    // "clang-tidy.compilerArgs": [
    //     "-std=c++17"
    // ],
    // "clang-tidy.compilerArgsBefore": [
    //     "-x=c++"
    // ],
    // "clang-format.executable": "/usr/bin/clang-format",
    // "clang-format.style": "{BasedOnStyle: Google, IndentWidth: 4}",
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "xaver.clang-format",
        // "editor.wordBasedSuggestions": false,
        // "editor.suggest.insertMode": "replace",
        // "editor.semanticHighlighting.enabled": true
    },
    // -------------------------------------------------------------------------
    // Cmake
    // -------------------------------------------------------------------------
    // "cmake.configureOnOpen": false
}
