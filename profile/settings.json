{
    // -------------------------------------------------------------------------
    // General
    // -------------------------------------------------------------------------
    "window.zoomLevel": 1,
    "update.showReleaseNotes": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.untrustedFiles": "open",
    // "extensions.ignoreRecommendations": true,
    // -------------------------------------------------------------------------
    // Explorer
    // -------------------------------------------------------------------------
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrderLexicographicOptions": "upper",
    // "explorer.autoReveal": false,
    // -------------------------------------------------------------------------
    // Files
    // -------------------------------------------------------------------------
    "files.insertFinalNewline": true,
    // "files.autoSave": "afterDelay",
    // "files.autoSaveDelay": 1000,
    // "files.associations": {
    //     "TARGETS": "json",
    //     "RULES": "json",
    //     "EXPRESSIONS": "json"
    // },
    // -------------------------------------------------------------------------
    // Editor
    // -------------------------------------------------------------------------
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "editor.detectIndentation": false,
    "editor.rulers": [
        80,
        120
    ],
    // "editor.quickSuggestions": false,
    // "editor.quickSuggestions": {
    //     "comments": "off",
    //     "strings": "off",
    //     "other": "off"
    // },
    // "editor.selectionHighlight": false,
    // "editor.occurrencesHighlight": false,
    // "editor.parameterHints.enabled": false,
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.suggest.snippetsPreventQuickSuggestions": false,
    // -------------------------------------------------------------------------
    // Diff editor
    // -------------------------------------------------------------------------
    "diffEditor.ignoreTrimWhitespace": false,
    // -------------------------------------------------------------------------
    // Log
    // -------------------------------------------------------------------------
    "[log]": {
        "editor.wordWrap": "on"
    },
    // -------------------------------------------------------------------------
    // Debug
    // -------------------------------------------------------------------------
    "debug.onTaskErrors": "abort",
    // -------------------------------------------------------------------------
    // Problems
    // -------------------------------------------------------------------------
    "problems.showCurrentInStatus": true,
    // -------------------------------------------------------------------------
    // Rewrap [stkb.rewrap]
    // Alt+Q
    // -------------------------------------------------------------------------
    "rewrap.wrappingColumn": 72,
    // -------------------------------------------------------------------------
    // Remote [ms-vscode-remote.remote-ssh]
    // -------------------------------------------------------------------------
    "remote.SSH.remotePlatform": {
        "10.204.62.226": "linux"
    },
    "remote.SSH.path": "C:\\WINDOWS\\System32\\OpenSSH\\ssh.exe",
    "remote.SSH.useLocalServer": true,
    "remote.SSH.lockfilesInTmp": true,
    // -------------------------------------------------------------------------
    // Git [eamodio.gitlens, mhutchie.git-graph]
    // -------------------------------------------------------------------------
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    // "gitlens.hovers.currentLine.over": "line",
    // -------------------------------------------------------------------------
    // Json [jkillian.custom-local-formatters]
    // Ctrl+Shift+I or Alt+Shift+F
    // -------------------------------------------------------------------------
    "customLocalFormatters.formatters": [
        {
            "command": "/home/roloff/.local/bin/hdump",
            "languages": [
                "json"
            ]
        }
    ],
    "[json]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "jkillian.custom-local-formatters"
    },
    // -------------------------------------------------------------------------
    // Python [ms-python.python, ms-python.vscode-pylance,
    // ms-python.pylint, ms-python.black-formatter, eeyore.yapf,
    // ms-python.isort,donjayamanne.python-environment-manager]
    // -------------------------------------------------------------------------
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    // "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintPath": "pylint",
    "python.linting.pylintEnabled": true,
    // "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style={based_on_style: google, column_limit: 80, indent_width: 4}"
    ],
    "python.formatting.blackArgs": [
        "--line-length=80",
        "--preview"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        // "editor.defaultFormatter": "eeyore.yapf",
        "editor.defaultFormatter": "ms-python.black-formatter",
        // "editor.defaultFormatter": "ms-python.python",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    }
